<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/rounded_background"
        android:elevation="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/foto"
            android:contentDescription="Imagem do grupo"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:background="@drawable/image_border"
            android:padding="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tituloMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quem Somos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="12dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textoMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Somos alunos do curso de Sistemas da Informação do SENAC e decidimos criar um projeto que busca resolver um problema comum: as longas filas presenciais. Nosso objetivo é tornar o processo mais rápido, eficiente e acessível através de uma solução mobile que permite o agendamento e controle remoto, reduzindo o tempo de espera e otimizando o atendimento."
            android:textSize="16sp"
            android:textColor="#555"
            android:lineSpacingExtra="8dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

    </LinearLayout>
</ScrollView>
